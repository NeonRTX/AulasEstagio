        static void ImprimirMenu()
        {
            Console.WriteLine("---DIGITE A OPÇÃO DESEJADA---");
            Console.WriteLine("1 - Criar Cliente");
            Console.WriteLine("2 - Abrir/Criar Conta Bancária");
